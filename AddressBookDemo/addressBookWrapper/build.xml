<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="build_and_jar" name="Build and Package AddressBookWrapper" basedir=".">
	<!--  ***********************************  -->
	<!--  * Targets                         *  -->
	<!--  ***********************************  -->
	<target name="build_and_jar" depends="build,create_jar"/>
	
	<!-- build the project using the autogenerated .cobolBuild file -->
	<target name="build">
		<ant antfile=".cobolBuild" target="cobolbuild">
			<property name="addressBookJVM" value="${basedir}/../addressBookJVM"/>
		</ant>
	</target>
	
	<!-- put all produce files in the bin folder into a jar -->
	<target name="create_jar">
		<ant antfile=".cobolBuild" target="jar"/>
	</target>
	
	<!-- clean the bin folder and the created jar file -->
	<target name="clean">
		<ant antfile=".cobolBuild" target="cleanJar"/>
		<ant antfile=".cobolBuild" target="clean"/>
	</target>
	
</project>